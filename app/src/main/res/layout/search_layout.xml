<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_search"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入要查找的书名或所在年级"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_weight="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_find_replace_white_48dp"/>

    </LinearLayout>
    <com.example.uchihakirito.zhishu.ReflashListView
        android:id="@+id/lv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.uchihakirito.zhishu.ReflashListView>
</LinearLayout>