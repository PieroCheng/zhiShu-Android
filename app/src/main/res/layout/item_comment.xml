<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<ImageView
    android:id="@+id/iv_item_comment_avator"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="#000000"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_comment_avator"

        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
        android:id="@+id/tv_item_comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textColor="#000000"
        android:text="User" />
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/tv_item_comment_time"
            android:layout_marginTop="5dp"
         android:text="06-17 8:25"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_item_comment_describe"
            android:text="11111111111111111111111111111111111111111111111111111111"/>


    </LinearLayout>
</RelativeLayout>